<p style="color: green"><%= notice %></p>

<% if @author.avatar.attached? %>
  <p>
    <%= image_tag(@author.avatar, height: '200') %>
  </p>
<% end %>

<%= render @author %>

<% if @author.photos.attached? %>
  <% @author.photos.each do |photo| %>
    <%= image_tag(photo, height: '200') %>
  <% end %>
<% end %>

<div>
  <%= link_to "Edit this author", edit_author_path(@author) %> |
  <%= link_to "Back to authors", authors_path %>

  <%= button_to "Destroy this author", @author, method: :delete %>
</div>
